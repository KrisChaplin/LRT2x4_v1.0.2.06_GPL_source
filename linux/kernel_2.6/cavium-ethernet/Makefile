include ../../embedded_rootfs/pkg_addon/nkuserland.config

CAVIUM_INCLUDES := -I ${SUBDIRS}/config -I ${OCTEON_ROOT}/target/include -I ${OCTEON_ROOT}/executive
kernel_source := ../linux

# Common flags to be passed for driver compilation
EXTRA_CFLAGS += -Winline -Wall ${CAVIUM_INCLUDES} -DNK_ASSIST_VID

default: all
obj-m         :=  cavium-ethernet.o
ifeq "$(NK_CONFIG_SW_MAC_CLONE)" "y"
cavium-ethernet-objs := ethernet.o nk_skb_parse.o nk_assist_vid.o
else
ifeq "$(CONFIG_NK_8021Q_SIMPLE)" "y"
cavium-ethernet-objs := ethernet.o nk_eth_8021q.o
else
cavium-ethernet-objs := ethernet.o
endif
endif

cavium-ethernet.o: $(cavium-ethernet-objs)
	$(LD) -r $^ -o $@

config/cvmx-config.h: config/executive-config.h ${OCTEON_ROOT}/executive/cvmx-resources.config
	cvmx-config config/executive-config.h

all: config/cvmx-config.h
	$(MAKE) -C $(kernel_source) SUBDIRS=`pwd`  modules;

clean:
	rm -rf .*.cmd *.mod.c *.o *.ko config/cvmx-config.h .tmp_versions

